{
    "version": 2,
    "builds": [
        {
            "src": "index.html",
            "use": "@vercel/static"
        },
        {
            "src": "style.css",
            "use": "@vercel/static"
        },
        {
            "src": "app.js",
            "use": "@vercel/static"
        },
        {
            "src": "img/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "music_assets/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "https://music-card-backend.onrender.com/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}